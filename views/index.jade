extends layout

block content
    h1= title
    p Hi :)

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                
                <img id='userImage'/>
                br
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Address:
                |  <span id='userInfoAddress'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        
        // /USER LIST

        // ADD USER
        
        a(href="/addUser") Add User
              
        // /ADD USER